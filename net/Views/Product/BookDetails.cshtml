@model net.DAL.BookDetails
@{
    ViewBag.Title = "BookDetails";
}
<!DOCTYPE html>
<html lang="zh-cmn">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="database project">
    <meta name="author" content="Ivy_w">
    <title>product_detail</title>

    <!-- CSS Style -->
    <link href="~/CSS/Home/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/Home/slider.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/Home/owl.carousel.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/Home/owl.theme.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/Home/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/Home/style.css" rel="stylesheet" type="text/css" />
    <!-- JavaScript -->
    <script type="text/javascript" src="~/js/Home/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/Home/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/Home/common.js"></script>
    <script type="text/javascript" src="~/js/Home/slider.js"></script>
    <script type="text/javascript" src="~/js/Home/owl.carousel.min.js"></script>
    <script type="text/javascript" src="~/js/Home/jquery.flexslider.js"></script>
    <script type="text/javascript" src="~/js/Home/imagezoom.js"></script>
    <script>
        new UISearch( document.getElementById( 'form-search' ) );
    </script>
</head>

<body>
        <!-- main-container -->
        <section class="main-container col1-layout">
            <div class="main container">
                <div class="col-main">
                    <div class="row">
                        <div class="product-view">
                            <div class="product-essential">
                                <form action="#" method="post" id="product_addtocart_form">
                                    <!-- 图片展示 -->
                                    <div class="product-img-box col-sm-4 col-xs-12">
                                        <div class="new-label new-top-left"> 新！ </div>
                                        <!-- 照片展示 主&滚动 -->
                                        <div class="product-image">
                                            <img src="@Model.book.picture_url" data-imagezoom="true" class="img-responsive" alt="product-image">
                                        </div>
                                        <!-- 照片展示end -->

                                        <div class="clear"></div>
                                    </div>
                                    <!-- 图片展示end -->
                                    <!-- 文字展示 -->
                                    <div class="product-shop col-sm-5 col-xs-12">
                                        <div class="product-name">
                                            <h1>@Model.book.book_name</h1>
                                        </div>
                                        <div class="short-description">
                                            <h3>简单介绍</h3>
                                            <p style="height:150px;">&nbsp;&nbsp;@Model.book.introduction</p>
                                        </div>
                                        <p class="availability in-stock">商品状态: <span>有货</span></p>
                                        <p class="availability in-stock"><span>剩余 @Model.book.count 件</span></p>
                                        <div class="price-block">
                                            <div class="price-box">
                                                <p class="old-price"> <span class="price-label">原价格:</span> <span id="old-price-48" class="price"> $@Model.bookDetails.price </span> </p>
                                                <p class="special-price"> <span class="price-label">折扣价格:</span> <span id="product-price-48" class="price"> $@Model.book.price </span> </p>
                                            </div>
                                        </div>
                                        <div class="add-to-box" style="margin-top:50px;">
                                            <div class="add-to-cart">
                                                <div class="pull-left">
                                                    <div class="custom pull-left">
                                                        <button onclick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 0 ) result.value--;return false;" class="reduced items-count" type="button">
                                                            <i class="icon-minus">&nbsp;</i>
                                                        </button>
                                                        <input type="text" class="input-text qty" title="Qty" value="1" maxlength="8"  id="qty" name="qty">
                                                        <button onclick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty )) result.value++;return false;" class="increase items-count" type="button">
                                                            <i class="icon-plus">&nbsp;</i>
                                                        </button>
                                                    </div>
                                                </div>
<!---->                                                <button  onclick="var result = document.getElementById('qty'); var qty = result.value; window.location.href='/Product/BookDetails?book_id=@ViewBag.book_id&count='+qty;var xml = new ActiveXObject('MSGBUS.GETMSG'); toastr.success(xml.getMsg(00002));" class="button btn-cart" title="Add to Cart" type="button">
                                                    <span><i class="icon-basket"></i> 加入购物车</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- 文字展示end -->
                                    <!-- 卖家信息 -->
                                    <div class="product-img-box col-sm-3 col-xs-12">
                                        <div class="short-description">
                                            <h4>卖家信息</h4>
                                            @if (Model.seller.picture_url == null || Model.seller.picture_url == "")
                                            {
                                                <a href="~/User/show?id=@Model.seller.account"><img src="/images/Home/seller.png"></a>
                                            }
                                            else
                                            {
                                                <a href="~/User/show?id=@Model.seller.account">
                                                    <img src="@Model.seller.picture_url">
                                                </a>
                                            }
                                                    <p>名称:@Model.seller.nickname</p>
                                                    <p>ID:@Model.seller.account</p>
                                                    <p>联系方式:@Model.seller.tele_phone</p>
                                                    <p>所在地:@Model.book.province</p>
</div>
                                    </div>
                                    <!-- 卖家信息end -->
                                </form>
                            </div>
                            <!-- 详情介绍 -->
                            <div class="product-collateral">
                                <ul id="product-detail-tab" class="nav nav-tabs product-tabs">
                                    <li class="active"> <a href="#product_tabs_description" data-toggle="tab"> 介绍 </a> </li>
                                    <li> <a href="#reviews_tabs" data-toggle="tab">评论</a> </li>
                                </ul>
                                <div id="productTabContent" class="tab-content">
                                    <div class="tab-pane fade in active" id="product_tabs_description">
                                        <div class="std">
                                            <p>@Model.book.introduction</p>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="reviews_tabs">
                                        <div class="box-collateral box-reviews" id="customer-reviews">
                                            <div class="box-reviews1">
                                                <div class="form-add" >
                                                    <form id="review-form" method="post" action="/Product/BookDetails?book_id=@Model.book.book_id" align="right">
                                                        <textarea style="width:100%;"class="required-entry" rows="3" cols="5" id="review_field" name="detail"></textarea>     
                                                        <button class="button submit" title="Submit Review" type="submit"><span>提交评论</span></button>
                                                    </form>
                                                </div>
                                            </div>
                                            <div class="box-reviews2">
                                                <h3>热门评论</h3>
                                                <div class="box visible">
                                                    <ul>
                                                        @foreach (var item in Model.CommentList)
                                                        {
                                                            <li>
                                                                <b>@item.buyer.nickname @item.comment.comment_date</b>
                                                                <div style="margin-left:20px;" class="review-txt">@item.comment.content</div>
                                                                <hr />
                                                            </li>
                                                        }
                                                        
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="clear"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- 详情介绍end -->
                            <!-- 相关推荐 -->
                            <div class="col-sm-12">
                                <div class="box-additional">
                                    <div class="related-pro wow bounceInUp animated">
                                        <div class="slider-items-products">
                                            <div class="new_title center">
                                                <h2>相似推荐</h2>
                                            </div>
                                            <div id="related-products-slider" class="product-flexslider hidden-buttons">
                                                <div class="slider-items slider-width-col4">
                                                    @foreach (var item in Model.similarBook)
                                                    {
                                                        <div class="item">
                                                            <div class="item-inner">
                                                                <div class="item-img">
                                                                    <div class="product-block">
                                                                        <div class="product-image">
                                                                            <a href="/Product/BookDetails?book_id=@item.book.book_id.ToString()&count=">
                                                                                <figure class="product-display">
                                                                                    <div class="new-label new-top-left">新！</div>
                                                                                    <img src="@item.book.picture_url" class="lazyOwl product-mainpic" alt="product-image" style="display: block;"> <img class="product-secondpic" alt="product-image" src="@item.book.picture_url">
                                                                                </figure>
                                                                            </a>
                                                                        </div>
                                                                        <div class="product-meta">
                                                                            <div class="product-action"> <a class="addcart" href="shopping_cart.html"> <i class="icon-shopping-cart">&nbsp;</i> 查看书本详情 </a> <a href="product_detail.html" class="quickview"> <i class="icon-zoom"></i> </a> </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="item-info">
                                                                    <div class="info-inner">
                                                                        <div class="item-title"> <a href="product_detail.html" title="Ut tincidunt tortor"> @Html.DisplayFor(modelitem => item.book.book_name)</a> </div>
                                                                        <div class="item-content">
                                                                            <div class="item-price">
                                                                                <div class="price-box">
                                                                                    <p class="old-price"><span class="price"> @Html.DisplayFor(modelitem=>item.bookDetails.price) </span> </p>
                                                                                    <p class="special-price"><span class="price"> @Html.DisplayFor(modelitem=>item.book.price) </span> </p>
                                                                                </div>
                                                                            </div>
                                                                            <div class="rating">
                                                                                <div class="ratings">
                                                                                    <div class="rating-box">
                                                                                        <div class="rating" style="width:50%"></div>
                                                                                    </div>

                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- 相关推荐 -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--End main-container -->
       
</body>
</html>
